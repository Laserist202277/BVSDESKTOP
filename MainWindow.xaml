<Window x:Class="MVVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVM"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="777">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14" />
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="14" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="Width" Value="85" />
            <Setter Property="Margin" Value="5" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="0.8*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="0.2*" />
        </Grid.RowDefinitions>
        <Menu Grid.ColumnSpan="6" >
            <MenuItem Header="File" Height="22" Width="46" RenderTransformOrigin="0.515,0.455">
                <MenuItem Header="Save" Command="{Binding SaveCommand}" />
            </MenuItem>
        </Menu>
        <DataGrid Grid.Column="0" AutoGeneratedColumns="DataGrid_AutoGeneratedColumns" ItemsSource="{Binding Notess}"
            SelectedItem="{Binding SelectedNotes}" SelectionChanged="ListBox_SelectionChanged" Grid.ColumnSpan="2" Margin="0,28,233,28" Grid.RowSpan="2">
            <DataGrid.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="5" Orientation="Horizontal" >
 
                        <TextBlock Text="{Binding Path=Currency}" />
                        <TextBlock Text="{Binding Path=Name}" />
                        <TextBlock Text="{Binding Path=CurrencyCode}" />
                        <TextBlock Text="{Binding Path=Nominal}" />
                        <TextBlock Text="{Binding Path=Serial_Number}" />
                        <TextBlock Text="{Binding Path=Dest}" />
                        <TextBlock Text="{Binding Path=Version}" />
                        <TextBlock Text="{Binding Path=Attribute}" />
                        <TextBlock Text="{Binding Path=Data_Time}" />
                    </StackPanel>
                </DataTemplate>
            </DataGrid.ItemTemplate>
        </DataGrid>
        <StackPanel Grid.Row="1" Orientation="Horizontal"/>

        <StackPanel Grid.Column="1" DataContext="{Binding SelectedNotes}">   


        </StackPanel>
        <Button Command="{Binding AddCommand}" Content="Start CashIn" Grid.Column="1" Margin="207,278,53,6" RenderTransformOrigin="-0.681,-1.399" Click="Button_Click" Grid.RowSpan="2"/>

    </Grid>
</Window>